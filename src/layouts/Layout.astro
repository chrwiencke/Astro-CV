---
interface Props {
	title: string;
}

import '../styles/global.css';

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark:bg-neutral-950">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Utdanning, erfaring, prosjekter og kontakt infromasjon for C. A. Wiencke" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<style>
			body {font-family: 'Helvetica', 'Arial', sans-serif;}
		</style>		
	</head>
	<body>
		<slot />
	</body>
</html>
